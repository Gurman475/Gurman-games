from pathlib import Path

# Create two simple HTML games

game1_html = """
<!DOCTYPE html>
<html>
<head>
    <title>Click Counter Game</title>
    <style>
        body { font-family: Arial; text-align: center; margin-top: 50px; }
        button { padding: 10px 20px; font-size: 16px; }
        #count { font-size: 24px; color: green; }
    </style>
</head>
<body>
    <h1>Click Counter Game</h1>
    <p>Click the button as many times as you can!</p>
    <p id="count">0</p>
    <button onclick="increment()">Click Me!</button>

    <script>
        let count = 0;
        function increment() {
            count++;
            document.getElementById('count').innerText = count;
        }
    </script>
</body>
</html>
"""

game2_html = """
<!DOCTYPE html>
<html>
<head>
    <title>Guess the Number</title>
    <style>
        body { font-family: Arial; text-align: center; margin-top: 50px; }
        input, button { padding: 8px; font-size: 16px; margin: 5px; }
        #message { font-size: 18px; color: blue; }
    </style>
</head>
<body>
    <h1>Guess the Number</h1>
    <p>Guess a number between 1 and 10</p>
    <input type="number" id="guess" min="1" max="10">
    <button onclick="checkGuess()">Guess</button>
    <p id="message"></p>

    <script>
        const number = Math.floor(Math.random() * 10) + 1;
        function checkGuess() {
            const guess = parseInt(document.getElementById('guess').value);
            const message = document.getElementById('message');
            if (guess === number) {
                message.innerText = "?? Correct! You guessed it!";
            } else {
                message.innerText = "? Wrong guess. Try again!";
            }
        }
    </script>
</body>
</html>
"""

# Save both games into HTML files
game1_path = Path("/mnt/data/game1.html")
game2_path = Path("/mnt/data/game2.html")

game1_path.write_text(game1_html)
game2_path.write_text(game2_html)

game1_path.name, game2_path.name

